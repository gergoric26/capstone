<%= form_for(@order) do |f| %>
  
  <%= f.hidden_field :user_id, value: current_user.id  %>
    <div>
      <%= current_user.name %>
    </div>

    <div>
      <%= current_user.address %> | <%= current_user.state %> | <%= current_user.zipcode %>
    </div>

    <div>
      <%= current_user.phone_number %> | <%= current_user.fax_number %>
    </div>

    </br>

    <div>
      <%= render 'carts/cart' %>
    </div>

    <div class="actions">
      <%= f.submit 'Place Order', class: 'btn btn-success' %>
    </div>

<% end %>