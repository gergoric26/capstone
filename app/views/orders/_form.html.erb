<%= form_for(@order) do |f| %>
  
  <%= f.hidden_field :vendor_id, value: current_vendor.id  %>
    <div>
      <%= current_vendor.name %>
    </div>

    <div>
      <%= current_vendor.address %> | <%= current_vendor.state %> | <%= current_vendor.zipcode %>
    </div>

    <div>
      <%= current_vendor.phone_number %> | <%= current_vendor.fax_number %>
    </div>

    </br>

    <div>
      <%= render 'carts/cart' %>
    </div>

    <div class="actions">
      <%= f.submit 'Place Order', class: 'btn btn-success' %>
    </div>

<% end %>