<p id="notice"><%= notice %></p>

<h1>All Orders</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Order</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', order, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

