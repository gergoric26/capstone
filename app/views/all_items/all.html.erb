<div class="container">
  </br>
  
 <%= render 'items/nav' %>
  
  <h1>Items</h1>

  </br>

  <%= link_to "New item", new_item_path, class: 'btn btn-success' %> | <%= link_to "Switch to all Vendors", pages_vendor_path, class: 'btn btn-success' %>
   
  <div class="row">
    <div class="col-md-12">
      
      <% @items.each do |item| %>

        <div class="media">
          <div class="media-body"> 

            <div class="col-md-2">
              <%= image_tag item.image.url(:thumb) %>
            </div>
           

            <h4 class="media-heading col-md-2">
              <%= item.title %>
            </h4>


            <small class="col-md-2">
              <%= item.description %>
            </small>



            <small class="col-md-2 center">
              <%= number_to_currency(item.price) %>
            </small>

            <%= button_to "Add to cart", line_items_path(item_id: item), class: 'btn btn-success' %> 

          </div>
        </div>


        </br>
        
      <% end %>

    </div>
  </div>
</div>
